<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context="com.example.mattm.calendar.Views.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/signInButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:onClick="signInButton_Clicked"
            android:text="@string/am1" />

        <Button
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="logOut_Clicked"
            android:text="@string/am2" />

        <Button android:id="@+id/addClassButton"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:text="@string/am3"
            android:onClick="addClassButton_Clicked" />


        <ListView android:id="@+id/periodsList"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#000"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="300dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:contentDescription="@string/greyDot"
                       android:background="@drawable/grey_dot"
                       android:layout_marginStart="16dp"/>
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:contentDescription="@string/greyDot"
                       android:background="@drawable/grey_dot"
                       android:layout_marginStart="16dp"/>
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:contentDescription="@string/greyDot"
                       android:background="@drawable/grey_dot"
                       android:layout_marginStart="16dp"/>
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:contentDescription="@string/greyDot"
                       android:background="@drawable/grey_dot"
                       android:layout_marginStart="16dp"/>
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:contentDescription="@string/greyDot"
                       android:background="@drawable/grey_dot"
                       android:layout_marginStart="16dp"/>
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:contentDescription="@string/greyDot"
                       android:background="@drawable/grey_dot"
                       android:layout_marginStart="16dp"/>
        </LinearLayout>
        
        <ListView android:id="@+id/eventsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/list_selector">
        </ListView>

    </LinearLayout>


</LinearLayout>



