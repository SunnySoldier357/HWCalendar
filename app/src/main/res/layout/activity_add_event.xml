<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="6"
            tools:context="com.example.mattm.calendar.Views.AddEventActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_column="0"
              android:layout_columnSpan="2"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              android:layout_row="0"
              android:text="Add an Event:"
              android:textSize="27sp"
              android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_column="0"
              android:layout_row="1"
              android:text="Name:"
              android:textSize="20sp"/>

    <EditText android:id="@+id/eventName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_column="1"
              android:layout_margin="8dp"
              android:layout_row="1"
              android:gravity="center"
              android:hint="soccer practice" />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_column="0"
              android:layout_row="2"
              android:text="Date: "
              android:textSize="20sp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_column="1"
                  android:layout_row="2" >

        <Spinner android:id="@+id/month"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" / "
                  android:textSize="20sp" />

        <Spinner android:id="@+id/day"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" / "
                  android:textSize="20sp" />

        <Spinner android:id="@+id/year"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_column="0"
              android:layout_row="3"
              android:text="Start:"
              android:textSize="20sp" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_column="1"
                  android:layout_row="3" >

        <Spinner android:id="@+id/startTimeSpinner"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

        <Spinner android:id="@+id/amPmStart"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_column="0"
              android:layout_row="4"
              android:text="End:"
              android:textSize="20sp" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_column="1"
                  android:layout_row="4" >

        <Spinner android:id="@+id/endTimeSpinner"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

        <Spinner android:id="@+id/amPmEnd"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="16dp"/>

    </LinearLayout>

    <Button android:id="@+id/addEventButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:onClick="addEventButton_Clicked"
            android:text="Add event" />

</GridLayout>