<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="10"
            tools:context="com.example.mattm.calendar.Views.AddEventActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Add an Assignment:"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp" />

    <EditText android:id="@+id/eventName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:layout_gravity="center_horizontal"
              android:hint="soccer practice" />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Date:"
              android:textSize="20sp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal">

        <Spinner android:id="@+id/month"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="/"
                  android:textSize="20sp" />

        <Spinner android:id="@+id/day"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="/"
                  android:textSize="20sp" />

        <Spinner android:id="@+id/year"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Start:"
              android:textSize="20sp" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal">

        <Spinner android:id="@+id/startTimeSpinner"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

        <Spinner android:id="@+id/amPmStart"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="End:"
              android:textSize="20sp" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal">

        <Spinner android:id="@+id/endTimeSpinner"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

        <Spinner android:id="@+id/amPmEnd"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="16dp"/>

    </LinearLayout>

    <Button android:id="@+id/addEventButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="64dp"
        android:layout_marginTop="8dp"
            android:onClick="addEventButton_Clicked"
            android:text="Add event" />

</LinearLayout>