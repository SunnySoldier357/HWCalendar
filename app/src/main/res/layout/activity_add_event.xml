<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="10"
            tools:context="com.example.mattm.calendar.Views.AddEventActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Add an Assignment:"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp" />

    <EditText android:id="@+id/eventName"
              android:layout_marginEnd="100dp"
              android:layout_marginStart="32dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:layout_gravity="center_horizontal"
              android:hint="soccer practice"
              android:background="@drawable/edittext_style"
              android:paddingLeft="48dp"
              android:paddingRight="48dp"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Date:"
              android:textSize="20sp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal">

        <Spinner android:id="@+id/month"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="/"
                  android:textSize="20sp" />

        <Spinner android:id="@+id/day"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="/"
                  android:textSize="20sp" />

        <Spinner android:id="@+id/year"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal">
    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal">

    </LinearLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:hint="descr \n\n"
        android:background="@drawable/edittext_style"
        android:padding="8dp"/>

    <Button
        android:id="@+id/addEventButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:onClick="classButton_Clicked"
        android:text="Add event" />

</LinearLayout>